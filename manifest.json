{
  "manifest_version": 3,
  "name": "Pomodoro Habitica",
  "version": "1.0.0",
  "description": "An extension so I don't have to check the checklist every damn time",
  "icons": {
    "48": "48-icon.png",
    "128":"128-icon.png"
  },
  "action": {
    "default_title": "Pomodoro Timer",
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions":["alarms", "notifications", "storage"]
}